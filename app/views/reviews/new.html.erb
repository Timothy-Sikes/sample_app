<% provide(:title, 'Sumbit a Review') %>
<h1>Sumbit a Review</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@review) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :course %>
      <%= f.collection_select :course_id, Course.all, :id, :name, :prompt => "Select a Course" %>
      
      <%= f.label :content %>
      <%= f.text_field :content %>
      
      <%= f.label :rating %>
      <%= f.number_field :rating %>

      <%= f.submit "Subit Review", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>