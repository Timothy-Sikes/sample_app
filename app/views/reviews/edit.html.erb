<% provide(:title, 'Edit this Review') %>
<h1>Edit this Review</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for( [@course, @review] ) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%#= f.label :course %>
      <%#= f.collection_select :course_id, Course.all, :id, :name, :prompt => "Select a Course" %>
      <h3> <%= @course.name %> </h3>
      
      <%= f.label :content %>
      <%= f.text_field :content %>
      
      <%= f.label :rating %>
      <%= f.number_field :rating %>

      <%= f.submit "Subit Review", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>